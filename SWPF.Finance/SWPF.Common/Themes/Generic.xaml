<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SWPF.Common"
    xmlns:controls="clr-namespace:SWPF.Common.Controls"
    >

    <Style TargetType="{x:Type controls:SSRibbon}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SSRibbon}">
                    <Ribbon x:Name="PART_Ribbon" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
